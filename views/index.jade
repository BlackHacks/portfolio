doctype 5
html
  head
    title= title

    link(href='css/bootstrap.css', rel='stylesheet')
    link(href='css/bootstrap-responsive.css', rel='stylesheet')
    link(href='css/docs.css', rel='stylesheet')
    link(href='assets/js/google-code-prettify/prettify.css', rel='stylesheet')
    link(href='http://fonts.googleapis.com/css?family=Oswald', rel='stylesheet', type='text/css')

    <link href="http://vjs.zencdn.net/c/video-js.css" rel="stylesheet">
    <script src="http://vjs.zencdn.net/c/video.js"></script>


    //
       Le HTML5 shim, for IE6-8 support of HTML5 elements 
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
    //
  body(data-spy='scroll', data-target='.subnav', data-offset='50')
    script(type='text/x-handlebars', data-template-name='application')
      {{view App.NavbarView controllerBinding="controller.controllers.navbarController"}}
      {{outlet}}

    script(type='text/x-handlebars', data-template-name='navbar')
      .navbar.navbar-fixed-top
        nav
          ul.clearfix
              <li><a href="#" {{action gotoHome}}>Home</a></li>
              li
                a.nav-blog(href="http://blog.piotry.me") Blog
              <li><a href="#" {{action gotoMusic}} >Music</a></li>
              li
                a.nav-portfolio(href='/portfolio', title='Portfolio') Portfolio
              li
                a.nav-about(href='/', title='About') About

    script(type='text/x-handlebars', data-template-name='home')
      .container

    script(type='text/x-handlebars', data-template-name='getting-started-menu')
      .container.show-grid
        ul.nav.nav-tabs
          <li><a href="#" {{action gotoSoundCloud}}>Soundcloud</a></li>
          <li><a href="#" {{action gotoYoutube}}>Youtube</a></li>
          li
            a.nav-about(href='/music') Timeline

    script(type='text/x-handlebars', data-template-name='youtube')
      .container
        header#overview.jumbotron.head
          h1 Music I produce

      {{view App.StartingMenuView}}
      .container
        .youtube
          <iframe width="420" height="315" src="http://www.youtube.com/embed/HOIZ4xra2eA" frameborder="0" allowfullscreen></iframe>
          <iframe width="420" height="315" src="http://www.youtube.com/embed/49WVV9JU-Ec" frameborder="0" allowfullscreen></iframe>
          <iframe width="520" height="415" src="http://www.youtube.com/embed/0_UXTwJ2X48" frameborder="0" allowfullscreen></iframe>


    script(type='text/x-handlebars', data-template-name='soundCloud')
      .container
        header#overview.jumbotron.head
          h1 Music I produce

      {{view App.StartingMenuView}}
      .show-grid
        .row-fluid.show-grid
          .span1
          .span5
            <iframe width="100%" height="330" scrolling="no" frameborder="no" src="http://w.soundcloud.com/player/?url=http%3A%2F%2Fapi.soundcloud.com%2Fplaylists%2F2150116&show_artwork=true"></iframe>
          .span5
            <iframe width="100%" height="320" scrolling="no" frameborder="no" src="http://w.soundcloud.com/player/?url=http%3A%2F%2Fapi.soundcloud.com%2Fplaylists%2F2125686&show_artwork=true"></iframe>
          .span1
